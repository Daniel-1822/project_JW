---

<section
    class="relative min-h-screen flex items-center justify-center overflow-hidden"
>
    <!-- Imagen de fondo -->
    <div class="absolute inset-0 z-0">
        <div class="absolute inset-0 bg-black/40 z-10"></div>
        <!-- Color de reserva si falla la imagen -->
        <div class="absolute inset-0 bg-[#1a2e05]"></div>
        <img
            src="/images/hero.jpg"
            class="w-full h-full object-cover opacity-80"
            alt="Hero Background"
        />
    </div>

    <!-- Contenido -->
    <div class="container mx-auto px-4 z-20 text-center">
        <!-- Pret√≠tulo -->
        <div class="overflow-hidden mb-4">
            <p
                id="hero-pretitle"
                class="text-amber-500 text-xl font-bold tracking-[0.3em] uppercase drop-shadow-md"
            >
                Bienvenidos al Parque
            </p>
        </div>

        <!-- T√≠tulo Principal -->
        <div class="overflow-hidden mb-6">
            <h1
                id="hero-title"
                class="text-6xl md:text-8xl lg:text-9xl font-black italic uppercase leading-none text-white drop-shadow-xl"
                style="-webkit-text-stroke: 2px #365314;"
            >
                <div class="inline-block">DINOPARK</div>
            </h1>
        </div>

        <!-- Subt√≠tulo -->
        <div class="overflow-hidden mb-12">
            <p
                id="hero-subtitle"
                class="text-stone-200 text-xl md:text-2xl max-w-3xl mx-auto font-medium shadow-black/50 drop-shadow-md"
            >
                La aventura m√°s peligrosa y emocionante de tu vida. <br />
                Observa dinosaurios reales en su h√°bitat natural.
            </p>
        </div>

        <!-- Cuadr√≠cula de Informaci√≥n -->
        <div class="overflow-hidden mb-12">
            <div
                id="hero-info"
                class="flex flex-wrap justify-center gap-6 text-white/90 font-bold uppercase tracking-wide text-sm"
            >
                <div
                    class="flex items-center gap-2 bg-black/30 px-4 py-2 rounded border border-white/20 backdrop-blur-sm"
                >
                    <span>ü¶ñ 50+ Especies</span>
                </div>
                <div
                    class="flex items-center gap-2 bg-black/30 px-4 py-2 rounded border border-white/20 backdrop-blur-sm"
                >
                    <span>üöô Safari Tours</span>
                </div>
                <div
                    class="flex items-center gap-2 bg-black/30 px-4 py-2 rounded border border-white/20 backdrop-blur-sm"
                >
                    <span>üèïÔ∏è Safari Camping</span>
                </div>
            </div>
        </div>

        <!-- Botones de Acci√≥n (CTAs) -->
        <div class="overflow-hidden">
            <div
                id="hero-ctas"
                class="flex flex-col sm:flex-row items-center justify-center gap-6"
            >
                <a href="#tickets" class="btn-secondary"> Comprar Pases </a>

                <a href="atracciones" class="btn-primary"> Ver Atracciones </a>
            </div>
        </div>
    </div>
</section>

<script>
    import gsap from "gsap";
    import { ScrollTrigger } from "gsap/ScrollTrigger";

    gsap.registerPlugin(ScrollTrigger);

    // Animaci√≥n inicial del hero (fade in)
    const timeline = gsap.timeline({ defaults: { ease: "power3.out" } });

    timeline
        .from("#hero-pretitle", {
            y: 50,
            opacity: 0,
            duration: 1,
            delay: 0.3,
        })
        .from(
            "#hero-title span",
            {
                y: 100,
                opacity: 0,
                duration: 1.2,
                stagger: 0.2,
            },
            "-=0.5",
        )
        .from(
            "#hero-subtitle",
            {
                y: 30,
                opacity: 0,
                duration: 0.8,
            },
            "-=0.6",
        )
        .from(
            "#hero-info",
            {
                y: 30,
                opacity: 0,
                duration: 0.8,
            },
            "-=0.6",
        )
        .from(
            "#hero-ctas",
            {
                y: 30,
                opacity: 0,
                duration: 0.8,
            },
            "-=0.6",
        );

    // Animaci√≥n de parallax en las estrellas
    gsap.to("#stars", {
        y: 300,
        scrollTrigger: {
            trigger: "section",
            start: "top top",
            end: "bottom top",
            scrub: true,
        },
    });

    // Animaci√≥n del t√≠tulo principal con scroll
    gsap.to("#hero-title", {
        scale: 0.8,
        opacity: 0,
        y: -100,
        scrollTrigger: {
            trigger: "section",
            start: "top top",
            end: "bottom top",
            scrub: true,
        },
    });
</script>

<style>
    @keyframes pulse-glow {
        0%,
        100% {
            box-shadow: 0 0 20px rgba(168, 85, 247, 0.4);
        }
        50% {
            box-shadow: 0 0 40px rgba(236, 72, 153, 0.6);
        }
    }

    section {
        animation: pulse-glow 3s ease-in-out infinite;
    }
</style>
