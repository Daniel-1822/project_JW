---
import Layout from "../layouts/Layout.astro";
import "../styles/global.css";
---

<Layout title="Contacto">
    <div class="container mx-auto px-4 py-8 max-w-4xl">
        <div class="text-center mb-12">
            <h1
                class="text-5xl md:text-6xl font-black text-amber-600 mb-4"
                style="font-family: 'Impact', sans-serif; letter-spacing: 2px;"
            >
                CONTACTO
            </h1>
            <p class="text-xl text-stone-600 font-medium">
                ¿Tienes preguntas sobre el parque? ¡Estamos aquí para ayudarte!
            </p>
        </div>

        <div class="dino-card p-8 md:p-12 relative overflow-hidden">
            <!-- Decoración de fondo -->
            <div
                class="absolute -top-10 -right-10 w-40 h-40 bg-green-100 rounded-full blur-3xl opacity-50 pointer-events-none"
            >
            </div>
            <div
                class="absolute -bottom-10 -left-10 w-40 h-40 bg-amber-100 rounded-full blur-3xl opacity-50 pointer-events-none"
            >
            </div>

            <form id="contactForm" class="relative z-10 space-y-6">
                <!-- Mensaje deFeedback -->
                <div
                    id="successMessage"
                    class="hidden bg-green-100 border-l-4 border-green-600 text-green-800 p-4 mb-6 rounded shadow-sm"
                    role="alert"
                >
                    <p class="font-bold">¡Mensaje Enviado!</p>
                    <p>
                        Gracias por contactarnos. Nuestro equipo de
                        velociraptors te responderá pronto.
                    </p>
                </div>

                <div
                    id="errorMessage"
                    class="hidden bg-red-100 border-l-4 border-red-600 text-red-800 p-4 mb-6 rounded shadow-sm"
                    role="alert"
                >
                    <p class="font-bold">Error</p>
                    <p>Por favor, corrige los errores en el formulario.</p>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Nombre -->
                    <div class="group">
                        <label
                            for="nombre"
                            class="block text-sm font-bold text-gray-700 uppercase tracking-wider mb-2 group-focus-within:text-green-700 transition-colors"
                        >
                            Nombre
                        </label>
                        <input
                            type="text"
                            id="nombre"
                            name="nombre"
                            class="w-full px-4 py-3 bg-stone-50 border-2 border-stone-200 rounded-sm focus:border-green-600 focus:outline-none focus:ring-0 transition-colors"
                            placeholder="Tu nombre completo"
                        />
                        <span
                            class="error-text text-red-600 text-sm mt-1 hidden"
                            >El nombre es obligatorio.</span
                        >
                    </div>

                    <!-- Email -->
                    <div class="group">
                        <label
                            for="email"
                            class="block text-sm font-bold text-gray-700 uppercase tracking-wider mb-2 group-focus-within:text-green-700 transition-colors"
                        >
                            Email
                        </label>
                        <input
                            type="email"
                            id="email"
                            name="email"
                            class="w-full px-4 py-3 bg-stone-50 border-2 border-stone-200 rounded-sm focus:border-green-600 focus:outline-none focus:ring-0 transition-colors"
                            placeholder="ejemplo@correo.com"
                        />
                        <span
                            class="error-text text-red-600 text-sm mt-1 hidden"
                            >Introduce un email válido.</span
                        >
                    </div>
                </div>

                <!-- Asunto -->
                <div class="group">
                    <label
                        for="asunto"
                        class="block text-sm font-bold text-gray-700 uppercase tracking-wider mb-2 group-focus-within:text-green-700 transition-colors"
                    >
                        Asunto
                    </label>
                    <select
                        id="asunto"
                        name="asunto"
                        class="w-full px-4 py-3 bg-stone-50 border-2 border-stone-200 rounded-sm focus:border-green-600 focus:outline-none focus:ring-0 transition-colors cursor-pointer"
                    >
                        <option value="">Selecciona un asunto...</option>
                        <option value="entradas">Problema con Entradas</option>
                        <option value="visita">Información sobre Visitas</option
                        >
                        <option value="eventos">Eventos Privados</option>
                        <option value="otro">Otro</option>
                    </select>
                    <span class="error-text text-red-600 text-sm mt-1 hidden"
                        >Por favor selecciona un asunto.</span
                    >
                </div>

                <!-- Mensaje -->
                <div class="group">
                    <label
                        for="mensaje"
                        class="block text-sm font-bold text-gray-700 uppercase tracking-wider mb-2 group-focus-within:text-green-700 transition-colors"
                    >
                        Mensaje
                    </label>
                    <textarea
                        id="mensaje"
                        name="mensaje"
                        rows="5"
                        class="w-full px-4 py-3 bg-stone-50 border-2 border-stone-200 rounded-sm focus:border-green-600 focus:outline-none focus:ring-0 transition-colors resize-none"
                        placeholder="¿En qué podemos ayudarte?"></textarea>
                    <span class="error-text text-red-600 text-sm mt-1 hidden"
                        >El mensaje no puede estar vacío (mínimo 10 caracteres).</span
                    >
                </div>

                <!-- Botón enviar -->
                <div class="pt-4">
                    <button type="submit" class="btn-primary w-full md:w-auto">
                        Enviar Mensaje
                    </button>
                </div>
            </form>
        </div>
    </div>

    <script>
        const form = document.getElementById(
            "contactForm",
        ) as HTMLFormElement | null;
        const successMessage = document.getElementById(
            "successMessage",
        ) as HTMLDivElement | null;
        const errorMessage = document.getElementById(
            "errorMessage",
        ) as HTMLDivElement | null;

        const inputs = {
            nombre: document.getElementById(
                "nombre",
            ) as HTMLInputElement | null,
            email: document.getElementById("email") as HTMLInputElement | null,
            asunto: document.getElementById(
                "asunto",
            ) as HTMLSelectElement | null,
            mensaje: document.getElementById(
                "mensaje",
            ) as HTMLTextAreaElement | null,
        };

        function validateEmail(email: string): boolean {
            return /^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email);
        }

        function showError(input: HTMLElement | null, show: boolean) {
            if (!input) return;
            const errorText = input.nextElementSibling;
            if (!errorText) return;

            if (show) {
                errorText.classList.remove("hidden");
                input.classList.add("border-red-500");
                input.classList.remove(
                    "border-stone-200",
                    "focus:border-green-600",
                );
            } else {
                errorText.classList.add("hidden");
                input.classList.remove("border-red-500");
                input.classList.add(
                    "border-stone-200",
                    "focus:border-green-600",
                );
            }
        }

        if (form) {
            form.addEventListener("submit", (e) => {
                e.preventDefault();

                let isValid = true;

                if (successMessage) successMessage.classList.add("hidden");
                if (errorMessage) errorMessage.classList.add("hidden");

                // Validar Nombre
                if (inputs.nombre && inputs.nombre.value.trim().length < 2) {
                    showError(inputs.nombre, true);
                    isValid = false;
                } else {
                    showError(inputs.nombre, false);
                }

                // Validar Email
                if (inputs.email && !validateEmail(inputs.email.value.trim())) {
                    showError(inputs.email, true);
                    isValid = false;
                } else {
                    showError(inputs.email, false);
                }

                // Validar Asunto
                if (inputs.asunto && inputs.asunto.value === "") {
                    showError(inputs.asunto, true);
                    isValid = false;
                } else {
                    showError(inputs.asunto, false);
                }

                // Validar Mensaje
                if (inputs.mensaje && inputs.mensaje.value.trim().length < 10) {
                    showError(inputs.mensaje, true);
                    isValid = false;
                } else {
                    showError(inputs.mensaje, false);
                }

                if (isValid) {
                    const btn = form.querySelector(
                        'button[type="submit"]',
                    ) as HTMLButtonElement | null;

                    if (btn) {
                        const originalText = btn.innerText;
                        btn.disabled = true;
                        btn.innerText = "Enviando...";
                        btn.classList.add("opacity-75", "cursor-not-allowed");

                        setTimeout(() => {
                            if (successMessage) {
                                successMessage.classList.remove("hidden");
                                successMessage.scrollIntoView({
                                    behavior: "smooth",
                                    block: "center",
                                });
                            }
                            form.reset();

                            btn.disabled = false;
                            btn.innerText = originalText;
                            btn.classList.remove(
                                "opacity-75",
                                "cursor-not-allowed",
                            );
                        }, 1500);
                    }
                } else {
                    if (errorMessage) {
                        errorMessage.classList.remove("hidden");
                        errorMessage.scrollIntoView({
                            behavior: "smooth",
                            block: "center",
                        });
                    }
                }
            });
        }

        Object.values(inputs).forEach((input) => {
            if (input) {
                input.addEventListener("input", () => {
                    showError(input, false);
                });
            }
        });
    </script>
</Layout>
