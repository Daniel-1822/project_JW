---
import Layout from "../layouts/Layout.astro";
import "../styles/global.css";
---

<Layout title="Dashboard - Admin Panel">
    <!-- Wrapper principal con fondo ligeramente distinto si se desea, aquí usamos el default del body -->
    <div class="container mx-auto px-4 py-8">
        <!-- Header del Dashboard -->
        <div
            class="mb-8 flex flex-col md:flex-row justify-between items-start md:items-center gap-4"
        >
            <div>
                <h1
                    class="text-4xl font-display font-black text-green-950 uppercase italic tracking-wider mb-2"
                >
                    Panel de Control
                </h1>
                <p class="text-stone-600 font-medium">
                    Vista general de operaciones del parque
                </p>
            </div>
            <div
                class="bg-amber-100 text-amber-800 px-4 py-2 rounded-full font-bold text-sm border border-amber-200 shadow-sm flex items-center gap-2"
            >
                <span class="relative flex h-3 w-3">
                    <span
                        class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"
                    ></span>
                    <span
                        class="relative inline-flex rounded-full h-3 w-3 bg-green-500"
                    ></span>
                </span>
                Estado del Sistema: NORMAL
            </div>
        </div>

        <!-- Tarjetas de Métricas -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-12">
            <!-- Tarjeta 1: Entradas -->
            <div
                class="bg-white p-6 rounded-xl shadow-lg border-l-4 border-amber-500 hover:shadow-2xl hover:-translate-y-1 transition-all duration-300 group"
            >
                <div class="flex justify-between items-start mb-4">
                    <div>
                        <p
                            class="text-stone-500 text-xs font-bold uppercase tracking-wider"
                        >
                            Entradas Vendidas Hoy
                        </p>
                        <h3
                            class="text-4xl font-black text-green-950 mt-2 group-hover:text-amber-600 transition-colors"
                        >
                            2,543
                        </h3>
                    </div>
                    <div
                        class="bg-amber-50 p-3 rounded-lg text-amber-600 group-hover:bg-amber-100 transition-colors"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            class="h-8 w-8"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z"
                            ></path>
                        </svg>
                    </div>
                </div>
                <div
                    class="flex items-center text-sm border-t border-stone-100 pt-4 mt-2"
                >
                    <span
                        class="text-green-600 font-bold flex items-center bg-green-50 px-2 py-0.5 rounded-md mr-2"
                    >
                        <svg
                            class="w-3 h-3 mr-1"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                            ><path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path></svg
                        >
                        +12.5%
                    </span>
                    <span class="text-stone-400">vs. ayer</span>
                </div>
            </div>

            <!-- Tarjeta 2: Visitantes -->
            <div
                class="bg-white p-6 rounded-xl shadow-lg border-l-4 border-emerald-600 hover:shadow-2xl hover:-translate-y-1 transition-all duration-300 group"
            >
                <div class="flex justify-between items-start mb-4">
                    <div>
                        <p
                            class="text-stone-500 text-xs font-bold uppercase tracking-wider"
